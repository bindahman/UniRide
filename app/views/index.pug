doctype html
html
  head
    title UniRide - Ride Sharing
    link(rel='stylesheet', href='/styles/main.css')
  body
    header
      nav
        ul
          li: a(href='/') Home
          li: a(href='/all-rides') All Rides
          li: a(href='/drivers') Drivers
          li: a(href='/about') About
          li: a(href='/contact') Contact
    section.hero
      h1 Welcome to UniRide
      p Connecting you with safe and reliable ride-sharing services.
      a.button(href='/all-rides') Browse Rides

    section.services
    h2 Our Services
    .grid
        if services && services.length
            each service in services
                .service
                    img(src=service.image, alt=service.name)
                    h3 #{service.name}
        else
            p No services available at the moment.


    footer
      p &copy; 2025 UniRide. All rights reserved.
